<div class="container-fluid">
  <div class="row">

    <div class="col-md-2">
        <%= render partial: "shared/tree", :locals => {cat: 700} %>
    </div>
    
    <div class="col-md-10">
        <h2 style="color: Blue; margin-bottom: 0px;"><%= @accia.name %></h2>
        <div style="margin-bottom: 0px;"><%= @accia.description %></div>
        <hr style="color: Green;">
        
        <div class="product_list_holder" style="display: table">
            <a id="start" name="start"></a>
            <div style="display: table-row">
                <div style="display: table-cell">
                    <% @products.each do |prod| %>
                        <% if prod.real == true %>
                            <%= render "shared/productonce", e: prod %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
  $(document).ready(function() {
        $("#acti_main").css({background: "-webkit-linear-gradient(white 0%, green 100%)",
                                  background: "-moz-linear-gradient(white 0%, green 100%)",
                                  background: "-o-linear-gradient(white 0%, green 100%)",
                                  background: "linear-gradient(white 0%, green 100%)"});
      });
      
       $('.speed_order_confirm').click(function() {
      $(".speed_order").hide();
      });
      
  $('.speed_order_close').click(function() {
      $i = this.id;
      $("#"+$i).filter(".speed_order").delay(100).slideToggle();
      });
      
  $('.speed_order_open').click(function() {
      $i = this.id;
      $("#"+$i).filter(".speed_order").delay(100).slideToggle();
      });
      
      $('.plus').click(function() {
      $current_class = this.classList[3];
      $counter = $(".counter."+$current_class);
      var $current_value = $counter.val();
      $current_value++;
      if($current_value <= $("input.counter."+$current_class).attr("max")) {
        $counter.val( $current_value);
        $("input.counter."+$current_class).attr("value", $current_value)
        $(".product_count_placer_view."+$current_class).html($counter.val())
      }
    });
    
    $('.minus').click(function() {
      $current_class = this.classList[3];
      $counter = $(".counter."+$current_class);
      var $current_value = $counter.val();
      $current_value--;
      if($current_value > 0) {
        $counter.val($current_value);
        $("input.counter."+$current_class).attr("value", $current_value)
        $(".product_count_placer_view."+$current_class).html($counter.val())
      }
    });
</script>
