<h2 style="margin: 15px; font-size: 24px; color: purple;">Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field"  style="margin: 15px;">
    <%= f.label "Почта:", style: "font-size: 16px;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 250px;" %>
  </div>

  <div class="field" style="margin: 15px;">
    <%= f.label  "Пароль:", style: "font-size: 16px;" %><br />
    <%= f.password_field :password, autocomplete: "current-password", style: "width: 250px;"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "Запомнить меня?", style: "font-size: 14px;" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Войти" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
